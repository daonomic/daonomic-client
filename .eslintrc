{
  "extends": ["plugin:react/recommended", "plugin:import/errors", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "no-plusplus": 0,
    "max-len": 0,
    "arrow-body-style": 0,
    "no-return-assign": 0,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*" },
      {
        "blankLine": "any",
        "prev": ["const", "let", "var"],
        "next": ["const", "let", "var"]
      }
    ],
    "no-use-before-define": ["error", "nofunc"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-undef": 2,
    "arrow-parens": ["error", "always"],
    "no-unused-vars": 2,

    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension": 0,
    "react/require-extension": 0,
    "react/require-default-props": 0,
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],

    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "postcss.config.js",
          "**/webpack/**/*.js",
          "**/*.story.js",
          "**/*.spec.js"
        ]
      }
    ]
  }
}
