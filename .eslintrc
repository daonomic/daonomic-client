{
  "extends": ["@daonomic/eslint-config", "plugin:import/errors"],
  "plugins": ["compat"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "cy": true,
    "Cypress": true,
    "before": true
  },
  "settings": {
    "import/resolver": "webpack",
    "polyfills": ["promises"]
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "postcss.config.js",
          "**/webpack/**/*.js",
          "**/*.story.js",
          "**/*.spec.js",
          "**/cypress/**/*.js"
        ]
      }
    ],

    "compat/compat": "error"
  }
}
